<div class="card">
    <div class="card-header bg-primary">
        <h3 class="card-title text-white">
            <i class="fas fa-file-pdf"></i> Upload PDFs
        </h3>
    </div>
    <div class="card-body">
        <form action="/pdfs" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="pdf" multiple class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon"  required>
                        <label class="custom-file-label" for="inputGroupFile">Chosse files</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-danger">
                  <i class="fa fa-upload"></i> Upload PDFs  
                </button>
            </div>
        </form>
    </div>
</div>